<%= form_for ([ @purchase, @low_value_consumption_info]), :html => { :class => 'form-horizontal' } do |f| %>
<% if (["waiting", "declined"].include?@purchase.status and !@purchase.is_send) or @purchase.status.eql?"revoked" %>
  <div class="control-group">
    <%= f.label :sn, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sn, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :low_value_consumption_catalog_id, :class => 'control-label' %>
    <div class="controls">
      <%= low_value_consumption_catalog_select_autocom("low_value_consumption_info",@low_value_consumption_info.id) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :asset_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :asset_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :batch_no, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :batch_no, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :brand_model, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :brand_model, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :measurement_unit, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :measurement_unit, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sum, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sum, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :buy_at, :class => 'control-label' %>
    <div class="controls">

      <%= f.text_field  :buy_at %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :branch, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :branch, :class => 'text_field' %>
    </div>
  </div>
<% end %>
  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :location, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :user, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :relevant_unit_id, :class => 'control-label' %>
    <div class="controls">
      <%= relevant_department_select_autocom("low_value_consumption_info",@low_value_consumption_info.id) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :use_unit_id, :class => 'control-label' %>
    <div class="controls">
      <%= use_unit_select_autocom("low_value_consumption_info",@low_value_consumption_info.id) %>
    </div>
  </div>
<% if (["waiting", "declined"].include?@purchase.status and !@purchase.is_send) or @purchase.status.eql?"revoked" %>
  <div class="control-group">
    <%= f.label :change_log, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :change_log, :class => 'text_field' %>
    </div>
  </div>
<% if @low_value_consumption_info.asset_name.blank? %>
  <div class="control-group">
    <%= label_tag(:amount, "数量") %>
    <div class="controls">
      <%= text_field("amount", "amount") %>
    </div>  
  </div>
<% end %>
<% end %>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            purchase_low_value_consumption_infos_path(@purchase), :class => 'btn btn-default' %>
 
<% end %>