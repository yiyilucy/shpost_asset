<%= form_for @activate_asset, :html => { :class => 'form-horizontal' } do |f| %>
  <% @activate_asset.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
  <% end %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', :id => 'name' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contact, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact, :class => 'text_field', :id => 'contact' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tel, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tel, :class => 'text_field', :id => 'tel' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :introduce, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :introduce, :class => 'text_field', :id => 'introduce', cols: 80, rows: 15 %>
    </div>
  </div>
  
  
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <% if can? :index, ActivateAsset%>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                activate_assets_path, :class => 'btn' %>
    <% end %>
  </div>
<% end %>