<%- model_class = ActivateAsset -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<table>
  <tr><td height="50px" valign="top"><strong><%= model_class.human_attribute_name(:name) %>:</td>
  <td height="50px" valign="top"><%= @activate_asset.name %></td></tr>
  <tr><td height="50px" valign="top"><strong><%= model_class.human_attribute_name(:contact) %>:</td>
  <td height="50px" valign="top"><%= @activate_asset.contact %></td></tr>
  <tr><td height="50px" valign="top"><strong><%= model_class.human_attribute_name(:tel) %>:</td>
  <td height="50px" valign="top"><%= @activate_asset.tel %></td><tr>
  <tr><td height="50px" valign="top"><strong><%= model_class.human_attribute_name(:introduce) %>:</td>
  <td height="50px" valign="top"><%= simple_format @activate_asset.introduce %></td><tr>
</table>
<% if !@activate_asset.import_file.blank? %>
  <br>
  <strong>附件:<%= @activate_asset.import_file.file_name %>
  <%= link_to t('.download', :default => t("helpers.links.download")), download_activate_asset_path(@activate_asset),:method => 'post', :class => 'btn btn-xs btn-primary' if (can? :download, @activate_asset) %>
<% end %>
<br><br><br>
<% if !params[:source].blank? && (params[:source].eql?"message") %>
    <%= link_to t('.back', :default => t("helpers.links.back")),
               request.referer, :class => 'btn btn-default'  %>
<% end %>  

<% if params[:source].blank? %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
               activate_assets_url, :class => 'btn btn-default'  %>
  <% if can? :update, @activate_asset %>
  <% link_to t('.edit', :default => t("helpers.links.edit")),
                edit_activate_asset_path(@activate_asset), :class => 'btn btn-default' %>
  <% end %>
  <% if (can? :destroy, @activate_asset) && (@activate_asset.create_unit_id == current_user.unit_id ) && (@activate_asset.status.eql?"valid") %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                activate_asset_path(@activate_asset),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
                :class => 'btn btn-danger' %>
  <% end %>
<% end %>
