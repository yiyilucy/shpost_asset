<%- model_class = RentInfo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:fixed_asset_catalog_id) %>:</strong></dt>
  <dd><%= FixedAssetCatalog.find_by(id:@rent_info.fixed_asset_catalog_id).try(:name) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:asset_name) %>:</strong></dt>
  <dd><%= @rent_info.asset_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:brand_model) %>:</strong></dt>
  <dd><%= @rent_info.brand_model %></dd>
  <dt><strong><%= model_class.human_attribute_name(:use_user) %>:</strong></dt>
  <dd><%= @rent_info.use_user %></dd>
  <dt><strong><%= model_class.human_attribute_name(:use_unit_id) %>:</strong></dt>
  <dd><%= Unit.find_by(id:@rent_info.use_unit_id).try(:name) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @rent_info.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:area) %>:</strong></dt>
  <dd><%= @rent_info.area %></dd>  
  <dt><strong><%= model_class.human_attribute_name(:annual_rent) %>:</strong></dt>
  <dd><%= @rent_info.annual_rent %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sum) %>:</strong></dt>
  <dd><%= @rent_info.sum %></dd>
  <dt><strong><%= model_class.human_attribute_name(:use_right_start) %>:</strong></dt>
  <dd><%= @rent_info.use_right_start.blank? ? "" : @rent_info.use_right_start.strftime('%Y-%m-%d') %></dd>
  <dt><strong><%= model_class.human_attribute_name(:use_right_end) %>:</strong></dt>
  <dd><%= @rent_info.use_right_end.blank? ? "" : @rent_info.use_right_end.strftime('%Y-%m-%d') %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pay_cycle) %>:</strong></dt>
  <dd><%= @rent_info.pay_cycle %></dd>
  <dt><strong><%= model_class.human_attribute_name(:license) %>:</strong></dt>
  <dd><%= @rent_info.license %></dd>
  <dt><strong><%= model_class.human_attribute_name(:deposit) %>:</strong></dt>
  <dd><%= @rent_info.deposit %></dd>  
  <dt><strong><%= model_class.human_attribute_name(:relevant_unit_id) %>:</strong></dt>
  <dd><%= Unit.find_by(id:@rent_info.relevant_unit_id).try(:name) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @rent_info.desc%></dd>
  <dt><strong><%= model_class.human_attribute_name(:change_log) %>:</strong></dt>
  <dd><%= @rent_info.change_log%></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              purchase_rent_infos_path(@purchase), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_purchase_rent_info_path(@purchase,@rent_info), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              purchase_rent_info_path(@purchase,@rent_info),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>
