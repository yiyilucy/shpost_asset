<%= form_for @unit, :html => { :class => 'form-horizontal' } do |f| %>

<%= hidden_field_tag('parentid',@parentid)%>
  <div class="control-group">
    <%= f.label :no, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :no, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :short_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :short_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :desc, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :tcbd_khdh, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tcbd_khdh, :class => 'text_field' %>
    </div>
  </div>
  <% if (!@unit.parent.blank? and @unit.parent.name.eql?I18n.t("relevant_unit.parent")) or (!@parentid.blank? and Unit.find_by(id: @parentid).name.eql?I18n.t("relevant_unit.parent")) %>
  <div class="control-group">
    <%= f.label :is_facility_management_unit, :class => 'control-label' %> 
    <div class="controls">
      <%= check_box("checkbox","is_facility_management_unit")%>æ˜¯</div>
  </div>
  <% end %>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            units_path, :class => 'btn btn-default' %>
 
<% end %>


