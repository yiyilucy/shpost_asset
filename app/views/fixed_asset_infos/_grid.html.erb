<%- model_class = FixedAssetInfo -%>
<%= define_grid(@fixed_asset_infos, hide_submit_button: true, hide_reset_button: true, html: {style: "table-layout:fixed;word-wrap:break-word;"}) do |g|
	g.column name: model_class.human_attribute_name(:asset_name), attribute: 'asset_name',detach_with_id: :asset_name_filter

    g.column name: model_class.human_attribute_name(:asset_no), attribute: 'asset_no',detach_with_id: :asset_no_filter

    g.column name: model_class.human_attribute_name(:fixed_asset_catalog_id), attribute: 'code',detach_with_id: :fixed_asset_catalog_id_filter, assoc: :fixed_asset_catalog do |fixed_asset_info|
      fixed_asset_info.fixed_asset_catalog.try :code
    end

    g.column name: model_class.human_attribute_name(:relevant_department), attribute: 'relevant_department',detach_with_id: :relevant_department_filter

    g.column name: model_class.human_attribute_name(:buy_at),detach_with_id: :buy_at_filter, attribute: 'buy_at' do |fixed_asset_info|
      DateTime.parse(fixed_asset_info.buy_at.to_s).strftime('%Y-%m-%d').to_s
    end

    g.column name: model_class.human_attribute_name(:use_at),detach_with_id: :use_at_filter, attribute: 'use_at' do |fixed_asset_info|
      DateTime.parse(fixed_asset_info.use_at.to_s).strftime('%Y-%m-%d').to_s
    end

    g.column name: model_class.human_attribute_name(:measurement_unit), attribute: 'measurement_unit',detach_with_id: :measurement_unit_filter

    g.column name: model_class.human_attribute_name(:amount), attribute: 'amount'

    g.column name: model_class.human_attribute_name(:sum), attribute: 'sum'

    g.column name: model_class.human_attribute_name(:unit_id), attribute: 'name',detach_with_id: :unit_id_filter, assoc: :unit do |fixed_asset_info|
      fixed_asset_info.unit.try :name
    end

    g.column name: model_class.human_attribute_name(:branch), attribute: 'branch', detach_with_id: :branch_filter

    g.column name: model_class.human_attribute_name(:location), attribute: 'location', detach_with_id: :location_filter

    g.column name: model_class.human_attribute_name(:user), attribute: 'user', detach_with_id: :user_filter

    g.column name: model_class.human_attribute_name(:change_log), attribute: 'change_log'

    g.column name: model_class.human_attribute_name(:accounting_department), attribute: 'accounting_department'

    g.column name: model_class.human_attribute_name(:status), attribute: 'status' , detach_with_id: :status_filter, custom_filter: FixedAssetInfo::STATUS.invert do |fixed_asset_info|
      fixed_asset_info.status_name
    end

    g.column name: model_class.human_attribute_name(:print_times), attribute: 'print_times'



  end 
%>