<%- model_class = RentInventory -%>
<div class="page-header">
  <h1>抽样盘点</h1>
</div>
<%= form_for @inventory, url: {action: "sample_inventory"}, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages %>
  <div class="control-group">
    <%= f.label "盘点单号", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :no, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field  :start_time %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field  :end_time %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field  :desc %>
    </div>
  </div>

  <div class="control-group">
  	<%= label_tag(:fixed_asset_catalog, "资产类别目录:") %>
  	<div class="controls">
      <%= fixed_asset_catalog_select_autocom("rent_info",@inventory.id) %>
    </div>
  </div>
  
  <div class="control-group">
    <%= label_tag(:lv3_unit, "盘点单位:") %>
  	<div class="controls">
      <%= lv3_unit_select_autocom("rent_info",@inventory.id) %>
    </div>
  </div>
  
  <%= f.submit nil, :class => 'btn btn-primary', onclick: "if(!confirm('确定创建?')){return false;}" %>
  <% if can? :index, RentInventory %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
               request.referer, :class => 'btn btn-default' %>
  <% end %>
<% end %>